                        <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <h2 class="text-lg font-bold text-gray-800 dark:text-gray-200">
                        Ol√°, <span class="text-blue-600"><%= username %></span>!
                    </h2>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">
                        Por favor, complete a verifica√ß√£o de dois fatores
                    </p>
                </div>
                
                <!-- Mensagem de Erro -->
                <% if (locals.error) { %>
                    <div class="mb-6 p-4 rounded-lg bg-red-50 text-red-700 border border-red-200">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                            </svg>
                            <span><%= error %></span>
                        </div>
                    </div>
                <% } %>
                
                <!-- Formul√°rio -->
                <form action="/mfa-verify" method="POST" class="space-y-6">
                    
                    <!-- C√≥digo TOTP -->
                    <div>
                        <label for="token" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            C√≥digo do Aplicativo Autenticador
                        </label>
                        <input 
                            type="text" 
                            id="token" 
                            name="token" 
                            required 
                            maxlength="8"
                            autocomplete="off"
                            class="w-full px-4 py-4 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white text-center text-2xl font-mono tracking-widest"
                            placeholder="000000"
                        >
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 text-center">
                            Digite o c√≥digo de 6 d√≠gitos ou c√≥digo de backup de 8 d√≠gitos
                        </p>
